{
  "name": "browser-extension-starter",
  "version": "1.0.0",
  "description": "Starter template for building browser extensions with React, TypeScript, and Parcel",
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost --config @parcel/config-webextension --no-content-hash --no-cache",
    "build": "parcel build src/manifest.json --config @parcel/config-webextension --no-content-hash --no-cache",
    "clean": "rm -r .parcel-cache dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bishaln/productive-browser.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/bishaln/productive-browser#readme",
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@types/chrome": "^0.0.216",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.8",
    "buffer": "^5.5.0",
    "parcel": "^2.8.3",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "process": "^0.11.10",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  }
}
